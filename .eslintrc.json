{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": [
        "react",
        "flowtype"
    ],
    "rules": {
        "no-unused-vars": ["error", {"args": "after-used", "argsIgnorePattern": "^_", "ignoreRestSiblings": true}]
    }
}